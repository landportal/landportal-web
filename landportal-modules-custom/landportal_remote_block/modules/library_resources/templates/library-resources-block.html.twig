{#
/**
* @file
* Landportal Library resources block's theme implementation.
*
* Available variables:
* - items:
*   - title: Library resources' title.
*   - url: Library resources' url.
*   - date: Library resources' publish date.
*   - image_url: Library resources' image url.
*   - image_title: Library resources' image title.
*   - image_alt: Library resources' image alt.
* - more_news_url: More Library resources page url.
*/
#}
<div>
  {% for item in items %}
    <div>
      <a href="{{ item.ss_url }}">
        <img src="{{ item['tm_field_image$file$url'].0 }}" title="{{ item['tm_field_image$file$field_file_image_title_text'].0 }}" alt="{{ item.image_alt }}">
      </a>
      <h3>
        <a href="{{ item.ss_url }}">{{ item.tm_title_field.0 }}</a>
      </h3>
      <div>{{ item.ds_field_doc_creation_date|date(format='j F Y') }}</div>
      <div>{{ item['tm_field_doc_description$value'].0|striptags|slice(0, 300) }}</div>
    </div>
  {% endfor %}
  <p><a href="{{ more_url }}">{{ more_label }}</a></p>
</div>
