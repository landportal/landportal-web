{% set block__base_class = 'indicators' %}

<div {{ bem(block__base_class) }}>
  <div {{ bem('category', [], block__base_class) }}>
    <div {{ bem('heading', [], block__base_class) }}>
      {{ socio_economic_title }}
      <a class="link" href="{{ socio_economic_more_url }}">{{ socio_economic_more_label }}</a>
    </div>

    <div {{ bem('data', [], block__base_class) }}>
      <div class="column">
        {% if land_area.value %}
          {% set value = land_area.value|number_format(1, '.', ',')|replace({".0" : ""}) %}
          {% include '@molecules/indicators/indicator.twig' with {
            indicator_url: land_area.url,
            indicator_title: land_area.title,
            indicator_value: value,
            indicator_unit: land_area.unit,
            indicator_desc: land_area.description,
          } %}
        {% endif %}
        {% if gini_index.value %}
          {% set value = gini_index.value|number_format(1, '.', ',')|replace({".0" : ""}) %}
          {% include '@molecules/indicators/indicator.twig' with {
            indicator_url: gini_index.url,
            indicator_title: gini_index.title,
            indicator_value: value,
            indicator_unit: gini_index.unit,
            indicator_desc: gini_index.description,
          } %}
        {% endif %}
        {% if gdp_capita.value %}
