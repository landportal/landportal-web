{% set block_base_class = 'news-block' %}

{% set block_label = 'More on this country'|t %}

<div {{ bem(block_base_class) }}>
  {% if block_label %}
    {% include "@atoms/text/headings/_heading.twig" with {
      heading_level: 2,
      heading: block_label,
      heading_modifiers: [block_base_class]
    } %}
  {% endif %}
  <div {{ bem('header', [], block_base_class) }}>
    {{ 'News'|t }}
    <a class="link" href="{{ more_url }}">{{ more_label }}</a>
  </div>
  {% block block_content %}
    <div {{ bem('grid', [], block_base_class) }}>
    {% for item in items %}
      {% include "@molecules/news-card/news-card.twig" with {
        item_title: item.item_title,
        item_url: item.item_url,
        external_image_src: item.external_image_src,
        image_src: item.image_src,
        image_title: item.image_title,
        image_alt: item.image_alt,
        published_date: item.published_date,
        item_summary: item.item_summary,
        card__block_class: block_base_class
      } %}
    {% endfor %}
  </div>
  {% endblock %}
</div>
