{{ attach_library('landportal/project-organisations-carousel') }}

{% set block_base_class = 'organisations-block' %}


<div {{ bem(block_base_class) }}>
  <div {{ bem('header', [], block_base_class) }}>
    <span>{{ 'Donors'|t }}</span>
    <a class="link" href="{{ more_url }}">{{ more_label }}</a>
  </div>
  {% block block_content %}
    <div {{ bem('carousel', [], block_base_class) }} }}>
      <div class="swiper-container project-organisations-swiper-container">
        {% block carousel_content %}
          <div class="swiper-wrapper">
            {% for item in items %}
              <div class="swiper-slide">
                {% include "@molecules/organisations-card/organisations-card.twig" with {
                  image_blockname: block_base_class,
                  image_src: item['tm_field_image$file$url'].0,
                  image_alt: item['tm_field_image$file$field_file_image_alt_text'].0,
                  item_title: item.ss_title_field,
                  item_url: item.ss_url,
                } %}
              </div>
            {% endfor %}
          </div>
        {% endblock %}
        <div class="swiper-pagination"></div>
      </div>
    </div>
  {% endblock %}
</div>
